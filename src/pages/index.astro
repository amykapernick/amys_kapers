---
import Layout from "@layouts/default";
import SVG from "@parts/svg";
import EventsTravelFeed from "@parts/eventsTravelFeed";
import Section from '@parts/section'
import IntroSection from '@partials/intro'
import Graphic from "@parts/graphic";

const content = {
	title: "Amy Kapernick",
	description:
		"Amy is a freelance developer, who spends her time volunteering at various community events in Perth, works as an evangelist for YOW! and is a Twilio Champion and Microsoft MVP. In her spare time she blogs about tech, the web and life and speaks at various conferences all over the world.",
};
---

<style>
	.section {
		position: relative;
		z-index: 0;
		margin: 80px auto;
		color: $white;

		& :global(section) {
			border-color: $white;
		}

		& :global(a) {
			color: inherit;
		}

		& .leaf, & .dots, & .peanut, & .flower {
			display: none;
			position: absolute;
			height: auto;
			width: auto;
		}
	}
	
	.background {
		position: absolute;
		top: -50px;
		right: 0;
		bottom: -50px;
		width: auto;
		height: calc(100% + 100px);
		color: var.$purple;
	}

	.graphic {
		position: relative;
		max-width: 400px;
		margin: 0 auto;
		padding: 0 0 10%;
		width: 90%;
		height: auto;

		& .image {
			display: block;
			width: 100%;
			height: 100%;

			& :global(image) {
				width: 100%;
				height: 100%;
			}
		}

		& .blob {
			z-index: -1;
			bottom: -15%;
			left: 15%;
			width: 90%;
			transform: rotate(90deg) scaleX(-1);
			height: auto;
			position: absolute;
		}

		& .paw {
			position: absolute;
			top: 0;
			right: 0;
			width: 100px;
			height: auto;
		}
	}

	

	.flower_2 {
		position: absolute;
		left: -170px;
		width: 200px;
		height: auto;
		margin-top: -200px;
	}

	.heart {
		position: absolute;
		top: 0;
		left: -50px;
		width: 100px;
		height: auto;
		mix-blend-mode: multiply;
	}

	@media(min-width: 40em) {

		.section {
			margin-top: 100px;
			padding-top: 20px;

			& :global(section) {
				text-align: right;
					

				& :global(.graphic) {
					order: 2;
					margin-right: 0;
					margin-left: 20px;
				}

				& :global(ul) {
					justify-content: flex-end;
				}


				&:nth-of-type(2n) {
					text-align: left;

					& > * {
						order: 1;
					}

					& :global(.graphic) {
						order: -2;
						margin-right: 20px;
						margin-left: 0;
					}

					& :global(ul) {
						justify-content: flex-start;
					}
				}
			}
		}

		.background {
			top: -80px;
			height: calc(100% + 150px);
		}

		.heart {
			top: auto;
			bottom: 0;
			left: -20px;
		}

		.flower_2 {
			left: -100px;
			margin-top: -100px;
		}

		.graphic {
			order: 2;
			margin-right: 0;
			flex: 1 0 50%;
			margin-left: 20px;
			max-width: 300px;

			& .blob {
				bottom: -10%;
				left: 20%;
				width: 90%;
			}
		}
	}

	@media(min-width: 50em) {
		.heart {
			left: 0;
		}

		.section {
			margin-top: 180px;
		}

		.background {
			top: -150px;
			height: calc(100% + 200px);
		}

		.graphic {
			& .blob {
				bottom: -20px;
				left: 50px;
			}
		}

		.special {
			& p {
				max-width: 300px;
			}
		}
	}

	@media(min-width: 60em) {
		.section {
			margin-top: 50px;

			& .leaf, & .dots, & .peanut, & .flower {
				display: block;
			}

			& .leaf {
				top: -120px;
				left: 0;
				width: 300px;
			}

			& .dots {
				top: -200px;
				right: -100px;
				width: 200px;
			}

			& .peanut {
				right: -250px;
				bottom: -280px;
				width: 300px;
			}

			& .flower {
				bottom: -130px;
				left: -80px;
				width: 200px;
			}
		}

		.background {
			right: -50%;
			height: calc(100% + 250px);
		}

		.heart {
			left: calc(5vw + 50px);
		}

		.graphic {
			margin-left: 90px;
			max-width: 400px;

			& .paw {
				top: 50px;
			}
		}

		.flower_2 {
			left: -350px;
			width: 500px;
			margin-top: -300px;
		}
	}

	@media(min-width: 70em) {
		.section {
			margin-top: 100px;

			& .leaf {
				top: -180px;
				width: 400px;
			}

			& .dots {
				top: -300px;
				right: -100px;
				width: 300px;
			}

			& .peanut {
				right: -250px;
				bottom: -200px;
				width: 400px;
			}

			& .flower {
				bottom: -180px;
			}
		}

		.graphic {
			padding-bottom: 0;

			& .blob {
				bottom: -130px;
			}
		}

		.background {
			top: -200px;
			right: auto;
			left: -65%;
			height: calc(100% + 300px);
		}

		.flower_2 {
			left: -300px;
			margin-top: -350px;
		}
	}

	@media(min-width: 80em) {
		.section {
			margin-top: 150px;
			margin-bottom: 200px;
			padding-top: 70px;

			& .leaf {
				top: -240px;
				left: -150px;
				width: 600px;
			}

			& .dots {
				top: -350px;
				right: -150px;
				width: 330px;
			}

			& .peanut {
				bottom: -350px;
			}

			& .flower {
				bottom: -250px;
				left: -50px;
			}
		}

		.background {
			height: calc(100% + 400px);
		}

		.heart {
			left: -20px;
		}

		.graphic {
			max-width: 450px;
		}

		.flower_2 {
			left: calc(50vw - 600px - 500px);
			width: 640px;
			margin-top: -450px;
		}
	}

	@media(min-width: 90em) {
		.section {
			margin-top: 200px;

			& .leaf {
				top: -320px;
				left: calc(50vw - 600px - 200px);
				width: 700px;
			}

			& .dots {
				right: calc(50vw - 600px - 200px);
			}

			& .peanut {
				right: calc(50vw - 600px - 600px);
				bottom:-425px;
				width: 600px;
			}

			& .flower {
				bottom: -320px;
				left: calc(50vw - 600px - 170px);
			}
		}

		.background {
			right: 0;
			left: auto;
		}
	}

</style>

<Layout content={content}>
	<IntroSection />

	<Section
		graphic="graphics/development.svg"
		icons={[
			{
				label: 'AimHigher Web',
				url: 'https://aimhigherweb.design',
				icon: 'icons/aimhigher.svg'
			}
		]}
	>
		<p>I help businesses get online, and stay online.</p>
		<p>
			At AimHigher we build modern & professional websites purpose
			made to be easily maintained by anyone, regardless of technical
			skill.
		</p>
		<Graphic name="graphics/heart.svg" class="heart" colour="orange" />
	</Section>

	<Section
		graphic="graphics/conference.svg"
		icons={[
			{
				icon: 'icons/notist.svg',
				href: 'https://speaking.amyskapers.dev',
				title: 'Notist',
			},
		]}
	>
		<p>
			I <a href="/talks">speak at conferences</a> about front end development,
			the web, mental health and life.
		</p>
		<p>
			I also run in person and online <a href="/workshops"
				>workshops</a
			> for a more in-depth focus on front end tech, both internally and
			alongside other events.
		</p>
	</Section>

	<Section
		graphic="graphics/coding.svg"
		icons={[
			{
				label: 'Tech Outsiders',
				icon: 'icons/techoutsiders.svg',
				url: 'https://techoutsiders.com.au/amy-kapernick/'
			},
			{
				label: 'Muses Code JS',
				icon: 'icons/musesjs.svg',
				url: 'https://musescodejs.org/perth.html'
			},
			{
				label: 'She Codes',
				icon: 'icons/shecodes.svg',
				url: 'https://shecodes.com.au/'
			}
		]}
	>
		<p>
			I mentor at events, helping more girls and women get involved in
			tech. This includes She Codes (formerly Perth Web Girls) and
			Muses Code JS (formerly NodeGirls).
		</p>
	</Section>

	<div class="section">
		<Graphic name="graphics/blob_background.svg" class="background" colour="purple" />
		<Graphic name="graphics/leaf_thin.svg" class="leaf" colour="green" />
		<Graphic name="graphics/dots.svg" class="dots" colour="red" />

		<Section
			graphic="graphics/blog.svg"
			icons={[
				{
					label: "Amy's Kapers",
					icon: 'icons/blog.svg',
					url: 'https://blog.amyskapers.dev'
				}
			]}	
		>
			<p>
				I write blog posts. Sometimes I blog about tech, sometimes
				about the web, sometimes about life.
			</p>
		</Section>

		<Section
			graphic="graphics/office_team.svg"
			icons={[
				{
					label: 'Microsoft MVP Profile',
					icon: 'icons/mvp.svg',
					url: 'https://mvp.microsoft.com/en-us/publicprofile/5003595'
				}
			]}
		>
			<p>
				I'm a Microsoft MVP. This means I do a lot of work in my
				community and sharing what I've learnt in conference talks
				and blog posts.
			</p>
		</Section>

		<Section
			graphic="graphics/community.svg"
			icons={[
				{
					label: 'Twilio Champions',
					icon: 'icons/twilio.svg',
					url: 'https://www.twilio.com/champions'
				}
			]}
		>
			<p>
				I'm a Twilio Champion. This means I help Twilio to build
				better communities.
			</p>
		</Section>

		<Graphic name="graphics/blob.svg" colour="blue" class="peanut" />
		<Graphic name="graphics/flower_2.svg" class="flower" colour="pink" />
	</div>

	<Section
		graphic="graphics/writing.svg"
		icons={[
			{
				label: 'Twitter',
				icon: 'icons/twitter.svg',
				url: 'https://twitter.com/amys_kapers',
				me: true
			},
			{
				label: 'Instagram',
				icon: 'icons/instagram.svg',
				url: 'https://www.instagram.com/amys_kapers/',
				me: true
			},
			{
				label: 'LinkedIn',
				icon: 'icons/linkedin.svg',
				url: 'https://www.linkedin.com/in/amykapernick/',
				me: true
			},
			{
				label: 'GitHub',
				icon: 'icons/github.svg',
				url: 'https://github.com/amykapernick',
				me: true
			},
			{
				label: 'CodePen',
				icon: 'icons/codepen.svg',
				url: 'https://codepen.io/amys_kapers',
				me: true
			},
			{
				label: 'Mastadon',
				icon: 'icons/mastodon.svg',
				url: 'https://hachyderm.io/@amys_kapers',
			}
		]}
	>
		<p>
			Sometimes I write interesting things on socials, but mostly it's
			just pictures of my dog.
		</p>
	</Section>

	<Section
		graphic="graphics/team.svg"
		icons={[
			{
				label: 'DDD Perth',
				icon: 'icons/dddperth.svg',
				url: 'https://dddperth.com/'
			}
		]}
	>
		<p>
			I'm on the committee for DDD Perth as Vice-Chair and Director of
			Conference Content. We're the biggest tech conference in
			Australia, not-for-profit and entirely volunteer run.
		</p>
		<p>
			In this role, I plan and run workshops for writing talk
			proposals, help build out the final agenda, mentor and run
			training for any speakers that need an extra hand or want
			feedback on their presentations before the big day.
		</p>
	</Section>

	<Graphic name="graphics/flower.svg" class="flower_2" colour="purple"  />

	<Section class="special">
		<div class="graphic">
			<SVG name="graphics/image_blob.svg" class="image" />
			<Graphic name="graphics/paw.svg" class="paw" colour="yellow" />
			<Graphic name="graphics/blob.svg" class="blob" colour="pink" />
		</div>
		<p>
			I have a grey and white border collie who likes long walks on the
			beach and snuggling on the couch.
		</p>
	</Section>

	<EventsTravelFeed />
</Layout>
